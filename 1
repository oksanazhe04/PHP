<?php

$a = 5;
$b = 10;
$c = 3;

$sum = $a + $b + $c;
echo "Додавання: $sum\n";

$subtraction = $a - $b - $c;
echo "Віднімання: $subtraction\n";

$multiplication = $a * $b * $c;
echo "Множення: $multiplication\n";

$division = $a / $b / $c;
echo "Ділення: $division\n";

$remainder = $a % $b % $c;
echo "Залишок від ділення: $remainder\n";

$power = $a  $b  $c;
echo "Піднесення до ступеня: $power\n";
?>
